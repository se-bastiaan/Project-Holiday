<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/slide_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/slide_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_size"
            android:layout_below="@id/slide_image"
            android:layout_centerHorizontal="true"
            android:gravity="center|top"
            />
        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/explanation_side_distance"
            android:layout_marginStart="@dimen/explanation_side_distance"
            android:layout_marginTop="95dp"
            android:background="@drawable/selectable_background"
            android:contentDescription="@string/prev"
            android:src="@drawable/ic_nav_prev" />
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/explanation_side_distance"
            android:layout_marginEnd="@dimen/explanation_side_distance"
            android:layout_marginTop="95dp"
            android:background="@drawable/selectable_background"
            android:contentDescription="@string/next"
            android:src="@drawable/ic_nav_next" />
        <Button
            android:id="@+id/done"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>